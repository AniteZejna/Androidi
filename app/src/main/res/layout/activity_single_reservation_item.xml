<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/reserve_fieldName_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Field name goes here"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reserve_date_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Reservation date goes here"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reserve_time_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Reservation time goes here"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/reserve_remove_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@android:color/holo_red_dark"
            android:text="Remove "
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>
